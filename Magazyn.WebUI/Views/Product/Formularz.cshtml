@model Magazyn.WebUI.Models.FormularzEmail
@{
    ViewBag.Title = "Formularz";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}
<style>
    .form-group {
        width: 65%;
    }
    .container{
        min-height:100%;
    }
    }
   .p{
       font-size:14px;
   }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <h3><b>FORMULARZ KONTAKTOWY</b></h3>
            <label class="alert-success">@ViewBag.Messages</label>
        </div>

        <div class="col-lg-4">
            <h3><b>DANE KONTAKTOWE</b></h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2" style="line-height: 26px;">
            <label>Imię i nazwisko:</label><br /><br />
            <label>Numer telefonu:</label><br /><br />
            <label>E-mail:</label><br /><br />
            <label>Treść wiadomości:</label><br /><br />
        </div>

        <div class="col-lg-6">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) <br />
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" }) <br />
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" }) <br />
                    @Html.TextAreaFor(x => x.Message, new { placeholder = "Opisz dokładnie swój problem", @class = "form-control",  @rows = 10,  }) <br />
                </div>
                <div class="lala">
                    <input type="submit" value="WYŚLIJ WIADOMOŚĆ" class="btn btn-primary" style="width:65%; font-weight: bold"/>
                </div>
            }
        </div>
   
        <div class="col-lg-4">
            <div class="ikony">
                <i class="fa fa fa-envelope-square" style="margin-right:10px"></i> <b>kontakt@magazyn.pl</b><br /><br />

                <i class="fa fa-phone-square" style="margin-right:10px"></i> <b>699 699 699</b> - <i>w godz. pracy magazynu</i><br /><br />

                <i class="fa fa-shopping-cart" style="margin-right:10px"></i> Pn-Pt 7:00 - 18:00, Sb 7:00 - 14:00<br />
                Nd - nieczynne
                <br />
                <hr>
                <h4><b>SIEDZIBA FIRMY</b></h4>
                Magazyn Firmowy<br />
                ul. Pocztowa 6<br />
                86-065 Lisi Ogon<br />
                NIP : 333-333-33-33<br />
                REGON : 555555555<br />
                <br />
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2393.659042638504!2d17.873457215798766!3d53.134265879935!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47030da3beeb3f95%3A0xabea960ae4de9d65!2sPocztowa%206%2C%2086-065%20Lisi%20Ogon!5e0!3m2!1spl!2spl!4v1592754819071!5m2!1spl!2spl" width="350" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>

    </div>
</div>


    