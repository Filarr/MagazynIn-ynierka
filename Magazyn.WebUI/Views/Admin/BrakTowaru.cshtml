@model Magazyn.WebUI.Models.BrakTowaruEmail

@{
    ViewBag.Title = "Administracja: zamowienie ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<style>

    .form-group {
        width: 100%;
    }

    .container {
        padding-top: 70px;
        width: 30%;
        height: 50%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        font-family: sans-serif;
    }

    .delete, .blank {
        background-color: #4CAF50;
        border: solid 2px;
        border-color: black;
        color: white;
        padding: 6px 6px;
        padding-bottom: 5px;
        text-decoration: none;
        margin: 5px 2px;
        margin-bottom: 10px;
        cursor: pointer;
    }

    input[type=button], input[type=submit], input[type=reset] {
        background-color: #4CAF50;
        border-radius: 3px;
        border-color: black;
        color: white;
        padding: 6px 6px;
        text-decoration: none;
        margin: 2px 2px;
        margin-bottom: 10px;
        cursor: pointer;
    }

    .menu-bar {
        background: rgba(20, 23, 20, 0.95);
        text-align: center;
        font-size: 16px;
        border-bottom-width: 6px;
        border-bottom-style: solid;
        border-bottom-color: forestgreen;
        border-top-width: 6px;
        border-top-style: solid;
        border-top-color: forestgreen;
    }

        .menu-bar ul {
            display: inline-flex;
            list-style: none;
            color: #fff;
        }

            .menu-bar ul li {
                width: 170px;
                margin: 4px;
                padding: 1px;
            }

                .menu-bar ul li a {
                    text-decoration: none;
                    color: #fff;
                }

                .active, .menu-bar ul li:hover {
                    background: #2bab0d;
                    border-radius: 3px;
                }

        .menu-bar .fa {
            margin-right: 7px;
        }
</style>
<div class="menu-bar" role="navigation">
    <ul>
        <li><i class="fa fa-cart-arrow-down"></i>@Html.ActionLink("Produkty", "Index")</a></li>
        <li><i class="fa fa-cart-arrow-down"></i>@Html.ActionLink("Kontrahent", "Kontrahent")</a></li>
        <li><i class="fa fa-cart-arrow-down"></i>@Html.ActionLink("Zestawy", "Zestaw")</a></li>
        <li><i class="fa fa-users"></i>@Html.ActionLink("Użytkownicy", "DaneUżytkowników")</a></li>
        <li><i class="fa fa-address-book"></i>@Html.ActionLink("Zamówienia", "Zamowienia")</a></li>
        <li><i class="fa fa-calendar"></i> @Html.ActionLink("Operacje", "Magazyn")</a></li>
    </ul>
    <ul>
        <li><i class="fa fa-address-book"></i> @Html.ActionLink("Dokumenty MM", "MM")</a></li>
        <li><i class="fa fa-address-book"></i> @Html.ActionLink("Dokumenty PW", "PW")</a></li>
        <li><i class="fa fa-address-book"></i> @Html.ActionLink("Dokumenty PZ", "PZ")</a></li>
        <li><i class="fa fa-address-book"></i> @Html.ActionLink("Dokumenty RW", "RW")</a></li>
        <li><i class="fa fa-address-book"></i> @Html.ActionLink("Dokumenty RZ", "RZ")</a></li>
        <li><i class="fa fa fa-home"></i>@Html.ActionLink("Wyloguj", "../Account/Login")</a></li>
    </ul>
</div>



<div class="container">
    <h3><b>Formularz do dostawcy</b></h3>
    @using (Html.BeginForm())
    {
        <label class="alert-success">@ViewBag.Messages</label>
        <div class="form-group">
            <label>Nazwa produktu : </label>
            <br />
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Zapotrzebowanie:</label>
            @Html.TextBoxFor(x => x.Ilość, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Nazwa kontrahenta : </label>
            <br />
            @Html.DropDownListFor(x => x.Kontrahent, new SelectList(ViewBag.kontrahenci, "KontrahentID", "NazwaKontrahenta"), new { @class = "form-control" })
        </div>

      

        <div class="lala">
            <input type="submit" value="Wyślij" class="btn btn-primary" />
            @Html.ActionLink("Anuluj", "Index", null, new
            {
           @class = "btn btn-default"
            })
        </div>

    }
</div>