<h3>Lista zamówień:</h3>
         <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered" id="tblExample">
            <tr>
                <th>Numer zamówienia</th>
                <th>ID Użytkownika</th>
                <th>Kwota Całkowita</th>
                <th>Zakończone?</th>
                <th>Kompletne?</th>
                <th>Data zamówienia</th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>@item.ZamowienieID</td>
                <td>@item.LoginID</td>
                <td>@item.Cena</td>
                <td>@item.Ended</td>
                <td>@item.Complete</td>
                <td>@item.Data</td>
                <td>
                    @if (@item.Complete == false)
                    {
                        using (Html.BeginForm("Braki", "Admin", new { item.ZamowienieID }))
                        {
                            <input type="submit" value="Uzupełnij" />
                        }
                    }
                    @if (@item.Ended == false)
                    {
                        using (Html.BeginForm("ZakonczZamowienie", "Admin", new { item.ZamowienieID }))
                        {
                            <input type="submit" value="Zakończ zamówienie" />
                        }
                    }
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Wydrukuj liste zamówień", "PrintAlll", null,
        new { @class = "btn btn-default" })
       
    </div>

