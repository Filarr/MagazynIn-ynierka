@model Magazyn.Domain.Entities.Kontrahent

@{
    ViewBag.Title = "Administracja: edycja " + @Model;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    HtmlHelper.ClientValidationEnabled = false;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
}

<div class="panel">
    <div class="panel-heading">
        <h3>Zarządzanie kontrahentami</h3>
    </div>
    @using (Html.BeginForm("EditKontrahent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            @Html.HiddenFor(m => m.KontrahentID)

            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                switch (property.PropertyName)
                {
                    case "KontrahentID":
                    case "ImageData":
                    case "ImageMimeType":
                        // Brak operacji.
                        break;
                    default:
                        <div class="form-group">
                            <label>@(property.DisplayName ?? property.PropertyName)</label>
                            @if (property.PropertyName == "Description")
                            {
                                @Html.TextArea(property.PropertyName, null,
                            new { @class = "form-control", rows = 5 })
                            }
                            else
                            {
                                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                            }
                            @Html.ValidationMessage(property.PropertyName)
                        </div>
                        break;
                }
            }
            <div class="form-group">
                <div style="position:relative;">
                    <label>Zdjęcie</label>
                    <a class='btn' href='javascript:;'>
                        Wybierz plik...
                        <input type="file" name="Image" size="40"
                               style="position:absolute;z-index:2;top:0;
                       left:0;filter: alpha(opacity=0); opacity:0;
                       background-color:transparent;color:transparent;"
                               onchange='$("#upload-file-info").html($(this).val());'>
                    </a>
                    <span class='label label-info' id="upload-file-info"></span>
                </div>
                @if (Model.ImageData == null)
                {
                    <div class="form-control-static">Brak zdjęcia</div> }
                else
                {
                    <img class="img-thumbnail" width="150" height="150"
                         src="@Url.Action("KontrahentGetImage", "Product",
                         new { Model.KontrahentID })" />
                }
            </div>
        </div>



        <div class="panel-footer">
            <input type="submit" value="Zapisz" class="btn btn-primary" />
            @Html.ActionLink("Anuluj i wróć do listy", "Kontrahent", null, new
            {
           @class = "btn btn-default"
            })
        </div>
    }
</div>
